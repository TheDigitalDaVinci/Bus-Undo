    <script>
        // Sample bus data - In a real application, this would come from a database
        let busData = [
            {
                id: 1,
                from: "‡¥ï‡µä‡¥ö‡µç‡¥ö‡¥ø",
                to: "‡¥§‡¥ø‡¥∞‡µÅ‡¥µ‡¥®‡¥®‡µç‡¥§‡¥™‡µÅ‡¥∞‡¥Ç",
                name: "‡¥ï‡µÜ‡¥é‡¥∏‡µç‡¥Ü‡µº‡¥ü‡¥ø‡¥∏‡¥ø ‡¥∏‡µÇ‡¥™‡µç‡¥™‡µº ‡¥´‡¥æ‡¥∏‡µç‡¥±‡µç‡¥±‡µç",
                time: "09:30",
                verifications: 15
            },
            {
                id: 2,
                from: "‡¥ï‡µä‡¥ö‡µç‡¥ö‡¥ø",
                to: "‡¥§‡¥ø‡¥∞‡µÅ‡¥µ‡¥®‡¥®‡µç‡¥§‡¥™‡µÅ‡¥∞‡¥Ç",
                name: "‡¥™‡µç‡¥∞‡µà‡¥µ‡¥±‡µç‡¥±‡µç ‡¥µ‡µã‡µæ‡¥µ‡µã",
                time: "10:15",
                verifications: 8
            },
            {
                id: 3,
                from: "‡¥ï‡µä‡¥ö‡µç‡¥ö‡¥ø",
                to: "‡¥§‡¥ø‡¥∞‡µÅ‡¥µ‡¥®‡¥®‡µç‡¥§‡¥™‡µÅ‡¥∞‡¥Ç",
                name: "‡¥ï‡µÜ‡¥é‡¥∏‡µç‡¥Ü‡µº‡¥ü‡¥ø‡¥∏‡¥ø ‡¥ì‡µº‡¥°‡¥ø‡¥®‡¥±‡¥ø",
                time: "11:00",
                verifications: 12
            },
            {
                id: 4,
                from: "‡¥ï‡µä‡¥ö‡µç‡¥ö‡¥ø",
                to: "‡¥ï‡µã‡¥¥‡¥ø‡¥ï‡µç‡¥ï‡µã‡¥ü‡µç",
                name: "‡¥Æ‡¥≤‡¥¨‡¥æ‡µº ‡¥é‡¥ï‡µç‡¥∏‡µç‡¥™‡µç‡¥∞‡¥∏‡µç",
                time: "08:45",
                verifications: 20
            },
            {
                id: 5,
                from: "‡¥§‡¥ø‡¥∞‡µÅ‡¥µ‡¥®‡¥®‡µç‡¥§‡¥™‡µÅ‡¥∞‡¥Ç",
                to: "‡¥ï‡µä‡¥ö‡µç‡¥ö‡¥ø",
                name: "‡¥ó‡¥æ‡¥∞‡µÅ‡¥° ‡¥∏‡µº‡¥µ‡µÄ‡¥∏‡µç",
                time: "14:30",
                verifications: 6
            }
        ];

        // Store user verifications with timestamps
        let userVerifications = JSON.parse(localStorage.getItem('busVerifications') || '{}');

        // Update current time every second
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-IN', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                timeZone: 'Asia/Kolkata'
            });
            document.getElementById('currentTime').textContent = `‡¥á‡¥™‡µç‡¥™‡µã‡¥≥‡¥§‡µç‡¥§‡µÜ ‡¥∏‡¥Æ‡¥Ø‡¥Ç: ${timeString}`;
        }

        // Call updateCurrentTime immediately and then every second
        updateCurrentTime();
        setInterval(updateCurrentTime, 1000);

        function searchBuses() {
            const fromLocation = document.getElementById('fromLocation').value.trim();
            const toLocation = document.getElementById('toLocation').value.trim();

            if (!fromLocation || !toLocation) {
                alert('‡¥¶‡¥Ø‡¥µ‡¥æ‡¥Ø‡¥ø ‡¥∞‡¥£‡µç‡¥ü‡µç ‡¥∏‡µç‡¥•‡¥≤‡¥ô‡µç‡¥ô‡¥≥‡µÅ‡¥Ç ‡¥®‡µΩ‡¥ï‡µÅ‡¥ï (Please enter both locations)');
                return;
            }

            // Show loading
            const resultsSection = document.getElementById('resultsSection');
            const busResults = document.getElementById('busResults');
            
            resultsSection.style.display = 'block';
            busResults.innerHTML = '<div class="loading">üîç ‡¥¨‡¥∏‡µÅ‡¥ï‡µæ ‡¥§‡¥ø‡¥∞‡¥Ø‡µÅ‡¥®‡µç‡¥®‡µÅ... (Searching for buses...)</div>';

            // Simulate search delay
            setTimeout(() => {
                displayResults(fromLocation, toLocation);
            }, 1000);
        }

        function displayResults(fromLocation, toLocation) {
            const busResults = document.getElementById('busResults');
            const currentTime = new Date();
            
            // Filter buses based on route and time
            const matchingBuses = busData.filter(bus => {
                const busTime = new Date();
                const [hours, minutes] = bus.time.split(':');
                busTime.setHours(parseInt(hours), parseInt(minutes), 0, 0);
                
                return (
                    bus.from.toLowerCase().includes(fromLocation.toLowerCase()) &&
                    bus.to.toLowerCase().includes(toLocation.toLowerCase()) &&
                    busTime >= currentTime
                );
            });

            // Sort by time and get earliest 5
            matchingBuses.sort((a, b) => a.time.localeCompare(b.time));
            const earliestBuses = matchingBuses.slice(0, 5);

            if (earliestBuses.length === 0) {
                busResults.innerHTML = `
                    <div class="no-results">
                        üòî ${fromLocation} ‡¥Æ‡µÅ‡¥§‡µΩ ${toLocation} ‡¥µ‡¥∞‡µÜ ‡¥á‡¥™‡µç‡¥™‡µã‡µæ ‡¥¨‡¥∏‡µÅ‡¥ï‡µæ ‡¥≤‡¥≠‡µç‡¥Ø‡¥Æ‡¥≤‡µç‡¥≤<br>
                        (No buses available from ${fromLocation} to ${toLocation} at this time)
                        <br><br>
                        ‡¥™‡µÅ‡¥§‡¥ø‡¥Ø ‡¥¨‡¥∏‡µç ‡¥µ‡¥ø‡¥µ‡¥∞‡¥ô‡µç‡¥ô‡µæ ‡¥ö‡µá‡µº‡¥ï‡µç‡¥ï‡¥æ‡µª ‡¥§‡¥æ‡¥¥‡µÜ‡¥Ø‡µÅ‡¥≥‡µç‡¥≥ ‡¥´‡µã‡¥Ç ‡¥â‡¥™‡¥Ø‡µã‡¥ó‡¥ø‡¥ï‡µç‡¥ï‡µÅ‡¥ï<br>
                        (Use the form below to add new bus information)
                    </div>
                `;
                return;
            }

            let resultsHTML = '';
            earliestBuses.forEach(bus => {
                const canVerify = canUserVerify(bus.id);
                const buttonText = canVerify ? '‡¥∏‡µç‡¥•‡¥ø‡¥∞‡µÄ‡¥ï‡¥∞‡¥ø‡¥ï‡µç‡¥ï‡µÅ‡¥ï' : '‡¥∏‡µç‡¥•‡¥ø‡¥∞‡µÄ‡¥ï‡¥∞‡¥ø‡¥ö‡µç‡¥ö‡µÅ';
                
                resultsHTML += `
                    <div class="bus-card">
                        <div class="bus-header">
                            <div class="bus-name">${bus.name}</div>
                            <div class="bus-time">${bus.time}</div>
                        </div>
                        <div class="verification-section">
                            <div class="verification-count">
                                <span class="verified-icon">‚úÖ</span>
                                ${bus.verifications} ‡¥™‡µá‡µº ‡¥∏‡µç‡¥•‡¥ø‡¥∞‡µÄ‡¥ï‡¥∞‡¥ø‡¥ö‡µç‡¥ö‡µÅ (${bus.verifications} people verified)
                            </div>
                            <button class="btn btn-verify" 
                                    onclick="verifyBus(${bus.id})" 
                                    ${!canVerify ? 'disabled' : ''}>
                                ${buttonText}
                            </button>
                        </div>
                    </div>
                `;
            });

            busResults.innerHTML = resultsHTML;
        }

        function canUserVerify(busId) {
            const today = new Date().toDateString();
            const userKey = `bus_${busId}`;
            
            if (!userVerifications[userKey]) {
                return true;
            }
            
            const lastVerificationDate = new Date(userVerifications[userKey]).toDateString();
            return lastVerificationDate !== today;
        }

        function verifyBus(busId) {
            if (!canUserVerify(busId)) {
                alert('‡¥®‡¥ø‡¥ô‡µç‡¥ô‡µæ ‡¥á‡¥®‡µç‡¥®‡µç ‡¥à ‡¥¨‡¥∏‡µç ‡¥∏‡µç‡¥•‡¥ø‡¥∞‡µÄ‡¥ï‡¥∞‡¥ø‡¥ö‡µç‡¥ö‡¥ø‡¥ü‡µç‡¥ü‡µÅ‡¥£‡µç‡¥ü‡µç (You have already verified this bus today)');
                return;
            }

            // Find and update the bus
            const bus = busData.find(b => b.id === busId);
            if (bus) {
                bus.verifications++;
                
                // Store user verification with timestamp
                userVerifications[`bus_${busId}`] = new Date().toISOString();
                localStorage.setItem('busVerifications', JSON.stringify(userVerifications));
                
                // Re-render results to update the display
                const fromLocation = document.getElementById('fromLocation').value;
                const toLocation = document.getElementById('toLocation').value;
                displayResults(fromLocation, toLocation);
                
                // Show success feedback
                alert('‡¥®‡¥®‡µç‡¥¶‡¥ø! ‡¥¨‡¥∏‡µç ‡¥∏‡¥Æ‡¥Ø‡¥Ç ‡¥∏‡µç‡¥•‡¥ø‡¥∞‡µÄ‡¥ï‡¥∞‡¥ø‡¥ö‡µç‡¥ö‡µÅ (Thank you! Bus timing verified)');
            }
        }

        function addNewBus() {
            const from = document.getElementById('newBusFrom').value.trim();
            const to = document.getElementById('newBusTo').value.trim();
            const name = document.getElementById('newBusName').value.trim();
            const time = document.getElementById('newBusTime').value;

            if (!from || !to || !name || !time) {
                alert('‡¥¶‡¥Ø‡¥µ‡¥æ‡¥Ø‡¥ø ‡¥é‡¥≤‡µç‡¥≤‡¥æ ‡¥µ‡¥ø‡¥µ‡¥∞‡¥ô‡µç‡¥ô‡¥≥‡µÅ‡¥Ç ‡¥®‡µΩ‡¥ï‡µÅ‡¥ï (Please fill in all information)');
                return;
            }

            // Add new bus to data
            const newBus = {
                id: Date.now(), // Simple ID generation
                from: from,
                to: to,
                name: name,
                time: time,
                verifications: 0
            };

            busData.push(newBus);

            // Clear form
            document.getElementById('newBusFrom').value = '';
            document.getElementById('newBusTo').value = '';
            document.getElementById('newBusName').value = '';
            document.getElementById('newBusTime').value = '';

            // Show success message
            const successMessage = document.getElementById('successMessage');
            successMessage.textContent = `‚úÖ ‡¥™‡µÅ‡¥§‡¥ø‡¥Ø ‡¥¨‡¥∏‡µç ‡¥µ‡¥ø‡¥µ‡¥∞‡¥ô‡µç‡¥ô‡µæ ‡¥µ‡¥ø‡¥ú‡¥Ø‡¥ï‡¥∞‡¥Æ‡¥æ‡¥Ø‡¥ø ‡¥ö‡µá‡µº‡¥§‡µç‡¥§‡µÅ! (New bus information added successfully!)`;
            successMessage.style.display = 'block';

            // Hide success message after 3 seconds
            setTimeout(() => {
                successMessage.style.display = 'none';
            }, 3000);
        }

        // Auto-fill destination fields when adding a new bus if search was performed
        document.getElementById('fromLocation').addEventListener('input', function() {
            document.getElementById('newBusFrom').value = this.value;
        });

        document.getElementById('toLocation').addEventListener('input', function() {
            document.getElementById('newBusTo').value = this.value;
        });
    </script>
